{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    # "plugin:import/errors",
    # "plugin:import/warnings",
  ],
  "installedESLint": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "import/resolver": {
    "babel-plugin-root-import": {}
  },
  "globals": [
    "require",
    "console",
    "Promise",
    "module",
    "clearInterval",
    "setInterval",
    "clearTimeout",
    "setTimeout",
    "setImmediate",
    "Map",
    "Buffer",
    "__dirname",
    "process",
    "Meteor",
    "Accounts",
    "document",
    "window"
  ],
  "rules": {
    "eqeqeq": [
      1,
      "allow-null"
    ],
    "camelcase": 0,
    "curly": [
      1,
      "all"
    ],
    "new-cap": 2,
    "no-irregular-whitespace": 2,
    "no-new": 2,
    "quotes": [
      0,
      "single"
    ],
    "no-extend-native": 2,
    "guard-for-in": 2,
    "no-use-before-define": 2,
    "no-undef": 2,
    "strict": 0,
    "no-unused-vars": 2,
    "no-console": 2
  }
}
